<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- AppCompatActivity的主题-->
    <style name="Lib_MVP_AppCompat_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Toolbar底部分割线  -->
    <style name="Lib_MVP_Divider_Toolbar_Bottom_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#19000000</item>
    </style>

    <!--Toolbar标题-->
    <style name="Lib_MVP_Toolbar_Title_Text" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lib_mvp_color_toolbar_background</item>
    </style>

    <style name="ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main</item>
        <item name="ab_autoImmersion">true</item>
        <item name="ab_bottomLineHeight">0dp</item>
        <item name="ab_foregroundLayerLayout">@layout/basic_ui_loading_bar</item>
        <item name="ab_statusBarColor">@color/transparent</item>
        <item name="ab_titleBarHeight">@dimen/action_bar_height</item>
    </style>

    <style name="ActionBar.Common">
        <item name="abc_titleTextColor">@color/lib_mvp_color_ff</item>
        <item name="abc_leftIconColor">@color/lib_mvp_color_ff</item>
        <item name="abc_leftIconPadding">13dp</item>
        <item name="abc_leftTextColor">@color/lib_mvp_color_ff</item>
        <item name="abc_rightIconColor">@color/lib_mvp_color_ff</item>
        <item name="abc_rightIconPadding">13dp</item>
        <item name="abc_rightTextColor">@color/lib_mvp_color_ff</item>
    </style>


    <style name="basic_ui_LoadingBarH" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding">
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">5dp</item>
    </style>

    <style name="StateView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="msv_animateViewChanges">false</item>
        <item name="msv_emptyView">@layout/layout_state_empty</item>
        <item name="msv_errorView">@layout/layout_state_error</item>
        <item name="msv_loadingView">@layout/layout_state_loading</item>
        <item name="msv_viewState">loading</item>
    </style>

</resources>
